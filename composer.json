{
    "name": "slimresetpassword",
    "description": "A Slim Framework for resetting Password with PostgreSQL DB",
    "keywords": ["microframework", "rest", "router", "resetpassword", "phpmailer", "postgresql"],
    "homepage": "https://github.com/RFA96/slimresetpassword",
    "license": "MIT",
    "authors": [
        {
            "name": "Raka Admiral Abdurrahman",
            "email": "raka.flyhigh@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "monolog/monolog": "^1.17",
        "phpmailer/phpmailer": "^6.1",
        "slim/php-view": "^2.0",
        "slim/slim": "^3.1",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-mysqli": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
